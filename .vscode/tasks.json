{
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: Build C++ Project",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/basler_cpp/build",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/basler_cpp"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "編譯 Basler C++ 專案 (Windows Release)"
        },
        {
            "type": "shell",
            "label": "CMake: Build Debug",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/basler_cpp/build",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/basler_cpp"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "編譯 Basler C++ 專案 (Windows Debug)"
        },
        {
            "type": "shell",
            "label": "CMake: Build C++ Project (macOS)",
            "command": "/opt/homebrew/Cellar/cmake/3.31.5/bin/cmake",
            "args": [
                "--build",
                "${workspaceFolder}/basler_cpp/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/basler_cpp"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "編譯 Basler C++ 專案 (macOS)"
        },
        {
            "type": "shell",
            "label": "CMake: Clean Build",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/basler_cpp/build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/basler_cpp"
            },
            "problemMatcher": [],
            "detail": "清理編譯產物"
        },
        {
            "type": "shell",
            "label": "CMake: Configure",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/basler_cpp/build",
                "-S",
                "${workspaceFolder}/basler_cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/basler_cpp"
            },
            "problemMatcher": [],
            "detail": "重新配置 CMake 專案"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-14 建置使用中檔案 (macOS)",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "單檔編譯 (macOS g++-14)"
        }
    ],
    "version": "2.0.0"
}
